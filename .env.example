# Planning Poker - Environment Configuration
# Copy this file to .env and fill in your values

# Admin Login Credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=<generate with: python generate_admin_password.py>

# Flask Secret Key (WICHTIG: Muss gesetzt sein, sonst gehen Sessions bei jedem Neustart verloren!)
# Generiere einen Key mit: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=<your-secret-key-here>

# Database Path (f√ºr Docker Volume)
# Lokal: planning_poker.db (default)
# Docker: /app/data/planning_poker.db
DB_PATH=planning_poker.db

# Flask Environment (production oder development)
FLASK_ENV=development

# Feature Configuration
# Einhorn Easter Egg beim Aufdecken der Karten aktivieren (true/false)
ENABLE_UNICORN=false

# Einhorn Anzeigedauer in Sekunden (nur relevant wenn ENABLE_UNICORN=true)
UNICORN_DISPLAY_SECONDS=3

# Zuschauer-Modus Feature aktivieren (true/false)
ENABLE_SPECTATOR_MODE=true
